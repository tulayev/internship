@model Task4.Models.ViewModels.RegisterVM

<h2>Registration</h2>

<form asp-action="Register" asp-controller="Home" asp-antiforgery="true">
    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group mb-3">
            <label asp-for="Name">Name</label><br />
            <input class="form-control" type="text" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Email">Email</label><br />
            <input class="form-control" type="text" asp-for="Email" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Password">Password</label><br />
            <input class="form-control" asp-for="Password" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="ConfirmPassword">Confirm Password</label><br />
            <input class="form-control" asp-for="ConfirmPassword" />
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Register" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
